<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="280.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="am.server.ServerController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="400.0" spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label fx:id="titleLabel" text="UNO Server" />
            <HBox prefHeight="200.0" prefWidth="400.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <TextField fx:id="portTextField" promptText="PORT" />
                        <Button fx:id="startServerButton" onAction="#startServerButtonClick" text="Start Server" />
                        <Button fx:id="stopServerButton" disable="true" onAction="#stopServerButtonClick" text="Stop Server" />
                        <Label fx:id="serverStatusLabel" text="Server status" />
                        <Label fx:id="numberOfConnectionsLabel" text="0">
                           <graphic>
                              <Label fx:id="connectionsLabel" text="Connections:" />
                           </graphic>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="20.0">
                     <children>
                        <Button fx:id="greetPlayersButton" disable="true" onAction="#greetPlayersButtonClick" text="Greet Players" />
                        <Button fx:id="giveCardsButton" disable="true" onAction="#giveCardsButtonClick" text="Give cards" />
                        <Button fx:id="printFirstPlayerCardsButton" onAction="#printFirstPlayerCardsButtonClick" text="Print c1 cards" />
                        <Button fx:id="startGameButton" onAction="#startGameButtonClick" text="Start Game" />
                        <Button fx:id="updatePlayerListButton" onAction="#updatePlayerListButtonClick" text="Start Game" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
