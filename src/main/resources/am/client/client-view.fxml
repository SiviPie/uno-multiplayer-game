<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="310.0" prefWidth="245.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="am.client.ClientController">
   <children>
      <VBox alignment="CENTER" prefHeight="310.0" prefWidth="245.0" spacing="20.0">
        <padding>
          <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
      
        <Label fx:id="titleLabel" text="UNO Client" />
         <TextField fx:id="ipTextField" promptText="IP" />
         <TextField fx:id="portTextField" promptText="PORT" />
         <TextField fx:id="usernameTextField" promptText="Username" />
        <Button fx:id="connectButton" onAction="#connectButtonClick" text="Connect" />
         <Button fx:id="disconnectButton" disable="true" onAction="#disconnectButtonClick" text="Disconnect" />
         <Label fx:id="connectionStatusLabel" text="Connection status" />
      </VBox>
   </children>
</AnchorPane>
